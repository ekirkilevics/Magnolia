  <groupId>info.magnolia</groupId>
  <artifactId>magnolia-templating-ui-components</artifactId>
  <name>magnolia-templating-ui-components</name>

  <properties>
    <taglib.shortname>ui</taglib.shortname>
    <taglib.uri>http://magnolia-cms.com/taglib/authoringui</taglib.uri>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.xdoclet</groupId>
        <artifactId>maven2-xdoclet2-plugin</artifactId>
      </plugin>
    </plugins>
    <testResources>
      <testResource>
        <!-- we keep .jsp in test/java for convenience -->
        <directory>src/test/java</directory>
      </testResource>
      <testResource>
        <!-- redefine default resources location -->
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
  </build>

  <dependencies>
