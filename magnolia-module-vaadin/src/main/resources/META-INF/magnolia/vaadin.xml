<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>vaadin</name>
  <displayName>Magnolia Vaadin Module</displayName>
  <class>info.magnolia.module.vaadin.VaadinModule</class>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>admin-central</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

 <servlets>
    <servlet>
      <name>AdminCentral</name>
      <class>info.magnolia.module.admincentral.vaadin.MagnoliaResourcesAwareApplicationServlet</class>
       <mappings>
         <mapping>/.magnolia/admin-central</mapping>
         <mapping>/.magnolia/admin-central/*</mapping>
      </mappings>
       <params>
         <param>
           <name>application</name>
           <value>info.magnolia.module.admincentral.AdminCentralApplication</value>
         </param>
         <param>
           <name>widgetset</name>
           <value>info.magnolia.module.vaadin.widgetsets.MagnoliaWidgetset</value>
         </param>
       </params>
    </servlet>
  </servlets>
</module>
