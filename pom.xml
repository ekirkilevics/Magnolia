  <profiles>
    <profile>
      <id>show-compile-warnings</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>maven-compiler-plugin</artifactId>
              <configuration>
                <!--<compilerArgument>-Xlint:unchecked,deprecation,fallthrough,finally</compilerArgument>-->
