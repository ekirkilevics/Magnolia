<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>cache</name>
  <displayName>Magnolia Cache Module</displayName>
  <description>Provides a pluggable cache.</description>
  <class>info.magnolia.module.cache.CacheModule</class>
  <versionHandler>info.magnolia.module.cache.setup.CacheModuleVersionHandler</versionHandler>
  <version>${project.version}</version>
  <properties>
    <!-- Custom transformer for net.sf.ehcache.config.CacheConfiguration
         because it does not respect the javabeans conventions for setting
         MemoryStoreEvictionPolicy -->
    <property>
      <name>net.sf.ehcache.config.CacheConfiguration.transformer</name>
      <value>info.magnolia.module.cache.ehcache.CacheConfigurationTransformer</value>
    </property>
  </properties>
  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.module.cache.mbean.CacheMonitor</type>
      <implementation>info.magnolia.module.cache.mbean.CacheMonitor</implementation>
    </component>
    <component>
        <type>info.magnolia.module.cache.executor.CompositeExecutorTransformer</type>
        <implementation>info.magnolia.module.cache.executor.CompositeExecutorTransformer</implementation>
    </component>
    <type-mapping>
      <type>info.magnolia.module.cache.CachePolicyExecutor</type>
      <implementation>info.magnolia.module.cache.executor.CompositeExecutor</implementation>
    </type-mapping>
  </components>
  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>exchange-simple</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
  </dependencies>

</module>
