<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>cache</name>
  <displayName>Magnolia Cache Module</displayName>
  <description>Provides a pluggable cache.</description>
  <class>info.magnolia.module.cache.CacheModule</class>
  <versionHandler>info.magnolia.module.cache.setup.CacheModuleVersionHandler</versionHandler>
  <version>${project.version}</version>
  <properties>
    <property>
      <name>info.magnolia.module.cache.CachePolicyExecutor</name>
      <value>info.magnolia.module.cache.executor.CompositeExecutor</value>
    </property>
    <!-- Custom transformer for net.sf.ehcache.config.CacheConfiguration
         because it does not respect the javabeans conventions for setting
         MemoryStoreEvictionPolicy -->
    <property>
      <name>net.sf.ehcache.config.CacheConfiguration.transformer</name>
      <value>info.magnolia.module.cache.ehcache.CacheConfigurationTransformer</value>
    </property>
  </properties>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>3.6/*</version>
    </dependency>
  </dependencies>

</module>
