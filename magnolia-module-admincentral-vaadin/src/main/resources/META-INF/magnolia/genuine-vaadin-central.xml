<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>genuine-vaadin-central</name>
  <displayName>Magnolia GenUIne Vaadin Admin Interface</displayName>
  <description>New Magnolia Administration GUI</description>
  <class>info.magnolia.module.admincentral.AdminCentralVaadinModule</class>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>VaadinApplicationServlet</name>
      <class>com.vaadin.terminal.gwt.server.ApplicationServlet</class>
       <mappings>
         <mapping>/AdminCentral/*</mapping>
         <mapping>/VAADIN/*</mapping>
      </mappings>
       <params>
         <param>
           <name>application</name>
           <value>info.magnolia.module.admincentral.AdminCentralVaadinApplication</value>
         </param>
         <param>
           <name>widgetset</name>
           <value>info.magnolia.module.admincentral.widgetset.AdminCentralWidgetset</value>
         </param>
       </params>
    </servlet>
  </servlets>
</module>
