<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>admin-central</name>
  <displayName>Magnolia GenUIne Vaadin Admin Interface</displayName>
  <description>New Magnolia Administration GUI</description>
  <class>info.magnolia.module.admincentral.AdminCentralVaadinModule</class>
  <versionHandler>info.magnolia.module.admincentral.setup.AdminCentralVaadinModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.0/*</version>
    </dependency>
    <!-- the dependency is just to ensure order of loading of modules -->
    <dependency>
      <name>adminInterface</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>samples</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>wcm</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>cache</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
      <dependency>
      <name>groovy</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>dms</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>workflow</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>demo-project</name>
      <version>1.3/*</version>
      <optional>true</optional>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>AdminCentral</name>
      <class>info.magnolia.module.admincentral.vaadin.MagnoliaResoucesAwareApplicationServlet</class>
       <mappings>
         <mapping>/.magnolia/admin-central</mapping>
         <mapping>/.magnolia/admin-central/*</mapping>
      </mappings>
       <params>
         <param>
           <name>application</name>
           <value>info.magnolia.module.admincentral.AdminCentralVaadinApplication</value>
         </param>
         <param>
           <name>widgetset</name>
           <value>info.magnolia.module.admincentral.widgetset.AdminCentralWidgetset</value>
         </param>
       </params>
    </servlet>
  </servlets>
</module>
