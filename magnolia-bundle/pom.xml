<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>magnolia-project</artifactId>
    <groupId>info.magnolia</groupId>
    <version>3.1-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>magnolia-bundle</artifactId>
  <packaging>pom</packaging>
  <name>magnolia-bundle</name>
  <version>3.1-SNAPSHOT</version>

  <build>
    <plugins>
      <plugin>
        <groupId>info.magnolia</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>1.0.2-SNAPSHOT</version>
        <executions>
          <!--<execution>-->
            <!--<phase>process-resources</phase>-->
            <!--<goals>-->
              <!--<goal>bundle</goal>-->
            <!--</goals>-->
            <!--<configuration>-->
              <!--<magnoliaWarProjectDirectory>../magnolia-enterprise-webapp</magnoliaWarProjectDirectory>-->
              <!--<magnoliaWarExplodedDirectory>../magnolia-enterprise-webapp/target/magnolia-enterprise-webapp-${project.version}</magnoliaWarExplodedDirectory>-->
            <!--</configuration>-->
          <!--</execution>-->
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>tomcat</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <tomcatdir>tmp</tomcatdir>
          <tomcatDownloadUrl>http://www.apache.org/dist/tomcat/tomcat-5/v5.5.25/bin/apache-tomcat-5.5.25.tar.gz</tomcatDownloadUrl>
          <releaseDest>target/extracted-tomcat</releaseDest>
          <finalDirectoryName>apache-tomcat-5.5.25</finalDirectoryName>
          <customize>false</customize>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-2-SNAPSHOT</version>
        <!--<version>2.2-beta-1</version>-->
        <!--<version>2.1.1-magnolia</version>-->
        <executions>
          <execution>
            <!-- using the same id as the parent to override its configuration ! -->
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <finalName>magnolia-${project.version}</finalName>
              <descriptors>
                <descriptor>src/release/bundle.xml</descriptor>
                <!--<descriptor>src/release/src.xml</descriptor>-->
                <!--<descriptor>src/release/wars.xml</descriptor>-->
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>info.magnolia</groupId>
      <artifactId>magnolia-webapp</artifactId>
      <version>3.1-SNAPSHOT</version>
      <!--<classifier>bundle</classifier>-->
      <!--<type>tar.gz</type>-->
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>info.magnolia</groupId>
      <artifactId>magnolia-module-dms</artifactId>
      <version>1.2-SNAPSHOT</version>
      <classifier>module-bundle</classifier>
      <type>tar.gz</type>
    </dependency>
    <dependency>
      <groupId>info.magnolia</groupId>
      <artifactId>magnolia-module-workflow</artifactId>
      <version>3.1-SNAPSHOT</version>
      <classifier>module-bundle</classifier>
      <type>tar.gz</type>
    </dependency>
    <dependency>
      <groupId>info.magnolia</groupId>
      <artifactId>magnolia-module-samples</artifactId>
      <version>3.1-SNAPSHOT</version>
      <classifier>module-bundle</classifier>
      <type>tar.gz</type>
    </dependency>
  </dependencies>


</project>
