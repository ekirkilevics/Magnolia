<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>bundle</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <!-- unpacked tomcat -->
    <fileSet>
      <directory>target/extracted-tomcat</directory>
      <!--<excludes>-->
        <!--<exclude>target/release/bundle/tomcat/bin</exclude>-->
        <!--<exclude>target/release/bundle/apache-tomcat-5.5.25/bin</exclude>-->
      <!--</excludes>-->
      <outputDirectory>/</outputDirectory>
      <fileMode>644</fileMode>
    </fileSet>
    <!-- our tomcat customisations -->
    <fileSet>
      <directory>src/release/tomcat/bin</directory>
      <outputDirectory>apache-tomcat-5.5.25/bin</outputDirectory>
      <fileMode>754</fileMode>
    </fileSet>

    <!--  TODO what was this ???
    <fileSet>
      <directory>src/release/tomcat/scripts</directory>
      <outputDirectory>tomcat/bin</outputDirectory>
      <fileMode>754</fileMode>
    </fileSet>
    -->

    <!-- readme, license, etc -->
    <fileSet>
      <directory>src/release/bundle</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <outputDirectory>apache-tomcat-5.5.25/webapps/magnoliaAuthor</outputDirectory>
      <includes>
        <include>info.magnolia:magnolia-webapp</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>apache-tomcat-5.5.25/webapps/magnoliaPublic</outputDirectory>
      <includes>
        <include>info.magnolia:magnolia-webapp</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>add-ons</outputDirectory>
      <includes>
        <include>info.magnolia:*</include>
      </includes>
      <excludes>
        <exclude>info.magnolia:magnolia-webapp</exclude>
      </excludes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>