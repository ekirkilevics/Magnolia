<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>bundle</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <!-- unpacked tomcat -->
    <fileSet>
      <directory>target/extracted-tomcat/apache-tomcat-5.5.25</directory>
      <outputDirectory>apache-tomcat-5.5.25/</outputDirectory>
      <excludes>
        <!-- if we want to only exclude specific default webapps, the trailing slash is needed :
        <exclude>webapps/balancer/</exclude>
        <exclude>webapps/jsp-examples/</exclude>
        <exclude>webapps/servlets-examples/</exclude>
        <exclude>webapps/tomcat-docs/</exclude>
        <exclude>webapps/webdav/</exclude> -->
        <!-- otherwise, we just exclude everything, since we're replacing the ROOT app anyway: -->
        <exclude>webapps/**/*</exclude>
      </excludes>
      <!-- TODO filemode ? -->
      <fileMode>644</fileMode>
    </fileSet>

    <!-- our tomcat customisations -->
    <fileSet>
      <directory>src/release/tomcat</directory>
      <outputDirectory>apache-tomcat-5.5.25</outputDirectory>
    </fileSet>

    <!-- making all .sh files executable : -->
    <fileSet>
      <directory>target/extracted-tomcat/apache-tomcat-5.5.25/bin/</directory>
      <outputDirectory>apache-tomcat-5.5.25/bin</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>754</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/release/tomcat/bin</directory>
      <outputDirectory>apache-tomcat-5.5.25/bin</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <fileMode>754</fileMode>
    </fileSet>

    <!--  TODO what was this ?
    <fileSet>
      <directory>src/release/tomcat/scripts</directory>
      <outputDirectory>tomcat/bin</outputDirectory>
      <fileMode>754</fileMode>
    </fileSet>
    -->

    <!-- readme, license, etc -->
    <fileSet>
      <directory>src/release/bundle</directory>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>apache-tomcat-5.5.25/webapps/magnoliaAuthor</outputDirectory>
      <includes>
        <include>info.magnolia:magnolia-webapp</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>apache-tomcat-5.5.25/webapps/magnoliaPublic</outputDirectory>
      <includes>
        <include>info.magnolia:magnolia-webapp</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>add-ons</outputDirectory>
      <includes>
        <include>info.magnolia:*</include>
      </includes>
      <excludes>
        <exclude>info.magnolia:magnolia-webapp</exclude>
      </excludes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>
