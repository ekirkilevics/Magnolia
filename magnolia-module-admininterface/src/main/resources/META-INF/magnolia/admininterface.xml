<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>adminInterface</name>
  <displayName>Magnolia Admin Interface Module</displayName>
  <description>Magnolia Administration GUI</description>
  <class>info.magnolia.module.admininterface.AdminInterfaceModule</class>
  <versionHandler>info.magnolia.module.admininterface.setup.AdminModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>3.5/*</version>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>AdminTreeServlet</name>
      <class>info.magnolia.module.admininterface.AdminTreeMVCServlet</class>
      <comment>Used to generate and handle trees within the Admin Interface</comment>
      <mappings>
        <mapping>/.magnolia/trees/*</mapping>
      </mappings>
    </servlet>
    <servlet>
      <name>DialogServlet</name>
      <class>info.magnolia.module.admininterface.DialogMVCServlet</class>
      <comment>Used to generate and handle dialogs within the Admin Interface</comment>
      <mappings>
        <mapping>/.magnolia/dialogs/*</mapping>
      </mappings>
    </servlet>
    <servlet>
      <name>PageServlet</name>
      <class>info.magnolia.module.admininterface.PageMVCServlet</class>
      <comment></comment>
      <mappings>
        <mapping>/.magnolia/pages/*</mapping>
      </mappings>
    </servlet>
  </servlets>
</module>