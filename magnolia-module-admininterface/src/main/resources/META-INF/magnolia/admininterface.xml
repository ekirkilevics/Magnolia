<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>adminInterface</name>
  <displayName>Magnolia Admin Interface Module</displayName>
  <description>Magnolia Administration GUI</description>
  <class>info.magnolia.module.admininterface.AdminInterfaceModule</class>
  <versionHandler>info.magnolia.module.admininterface.setup.AdminModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <properties>
    <property>
      <name>defaultPublicURI</name>
      <value>redirect:/.magnolia/pages/quickstart.html</value>
    </property>
  </properties>

  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.module.admininterface.DialogHandlerManager</type>
      <implementation>info.magnolia.module.admininterface.DialogHandlerManager</implementation>
    </component>
    <component>
      <type>info.magnolia.module.admininterface.ConfiguredDialogHandlerManager</type>
      <implementation>info.magnolia.module.admininterface.ConfiguredDialogHandlerManager</implementation>
    </component>
    <component>
      <type>info.magnolia.module.admininterface.PageHandlerManager</type>
      <implementation>info.magnolia.module.admininterface.PageHandlerManager</implementation>
    </component>
    <component>
      <type>info.magnolia.module.admininterface.TreeHandlerManager</type>
      <implementation>info.magnolia.module.admininterface.TreeHandlerManager</implementation>
    </component>
    <component>
      <type>info.magnolia.cms.gui.i18n.I18nAuthoringSupport</type>
      <workspace>config</workspace>
      <path>/server/i18n/authoring</path>
      <observed>true</observed>
      <scope>singleton</scope>
    </component>
    <component>
      <type>info.magnolia.cms.gui.dialog.ControlsManager</type>
      <implementation>info.magnolia.cms.gui.dialog.ControlsManager</implementation>
    </component>
    <type-mapping>
      <type>info.magnolia.module.admininterface.SaveHandler</type>
      <implementation>info.magnolia.module.admininterface.UUIDSaveHandler</implementation>
    </type-mapping>
  </components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>4.5/*</version>
    </dependency>
    <dependency>
      <name>rendering</name>
      <version>4.5/*</version>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>AdminTreeServlet</name>
      <class>info.magnolia.module.admininterface.AdminTreeMVCServlet</class>
      <comment>Used to generate and handle trees within the Admin Interface</comment>
      <mappings>
        <mapping>/.magnolia/trees/*</mapping>
      </mappings>
    </servlet>
    <servlet>
      <name>DialogServlet</name>
      <class>info.magnolia.module.admininterface.DialogMVCServlet</class>
      <comment>Used to generate and handle dialogs within the Admin Interface</comment>
      <mappings>
        <mapping>/.magnolia/dialogs/*</mapping>
      </mappings>
    </servlet>
    <servlet>
      <name>PageServlet</name>
      <class>info.magnolia.module.admininterface.PageMVCServlet</class>
      <comment></comment>
      <mappings>
        <mapping>/.magnolia/pages/*</mapping>
      </mappings>
    </servlet>
  </servlets>
</module>
