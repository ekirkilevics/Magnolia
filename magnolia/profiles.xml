<?xml version="1.0" encoding="UTF-8"?>

<profiles>
  <profile>
    <id>bootstrapAuthor</id>
    <build>
      <directory>/src/main/java</directory>
      <plugins>
        <plugin>
          <groupId>info.magnolia</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>bootstrap</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </build>
  </profile>
</profiles>