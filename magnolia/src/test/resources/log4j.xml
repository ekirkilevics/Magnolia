<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
    <!-- log4j configuration for tests, socket appender -->
    <!--
        <appender name="socket-appender" class="org.apache.log4j.net.SocketAppender">
        <param name="RemoteHost" value="localhost" />
        <param name="Port" value="4445" />
        </appender>
    -->
    <!-- log4j configuration for tests, console -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %C{1}(%M:%L) - %m\n" />
        </layout>
    </appender>
    <!-- standard log4j appender used for tests, file -->
    <appender name="test-appender" class="org.apache.log4j.FileAppender">
        <param name="File" value="junit.log" />
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %C{1}(%M:%L) - %m\n" />
        </layout>
    </appender>
    <category name="org">
        <priority value="warn" />
    </category>
    <category name="info">
        <priority value="debug" />
    </category>
    <root>
        <priority value="debug" />
        <appender-ref ref="test-appender" />
        <!--<appender-ref ref="socket-appender" />-->
        <!--<appender-ref ref="console" />-->
    </root>
</log4j:configuration>