<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>magnolia-project</artifactId>
    <groupId>info.magnolia</groupId>
    <version>3.0-rc4-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <profiles>
    <profile>
      <id>author</id>
      <build>
        <plugins>
          <plugin>
            <groupId>info.magnolia</groupId>
            <artifactId>maven-bundle-plugin</artifactId>
            <configuration>
              <configFile>WEB-INF/config/magnoliaAuthor/magnolia.properties,WEB-INF/config/default/magnolia.properties</configFile>
              <postBootstrappers>
                <postBootstrapper implementation="info.magnolia.maven.bootstrap.post.OrderNodes">
                  <repository>website</repository>
                  <nodes>
                    <node>features</node>
                    <node>magnolia-product-info</node>
                    <node>mailform</node>
                    <node>help</node>
                    <node>mails</node>
                  </nodes>
                </postBootstrapper>
                <postBootstrapper implementation="info.magnolia.maven.bootstrap.post.OrderNodes">
                  <repository>dms</repository>
                  <nodes>
                    <node>magnolia</node>
                    <node>openwfe</node>
                    <node>demo-docs</node>
                  </nodes>
                </postBootstrapper>
                <postBootstrapper implementation="info.magnolia.maven.bootstrap.post.SetActivationStatus">
                  <repositories>
                    <repository>website</repository>
                    <repository>dms</repository>
                    <repository>users</repository>
                    <repository>userroles</repository>
                    <repository>usergroups</repository>
                  </repositories>
                  <activated>true</activated>
                </postBootstrapper>
                <postBootstrapper implementation="info.magnolia.maven.bootstrap.post.SetActivationStatus">
                  <repositories>
                    <repository>config</repository>
                  </repositories>
                  <path>/modules/templating</path>
                  <activated>true</activated>
                </postBootstrapper>
              </postBootstrappers>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>public</id>
      <build>
        <plugins>
          <plugin>
            <groupId>info.magnolia</groupId>
            <artifactId>maven-bundle-plugin</artifactId>
            <configuration>
              <configFile>WEB-INF/config/magnoliaPublic/magnolia.properties,WEB-INF/config/default/magnolia.properties</configFile>
              <postBootstrappers>
                <postBootstrapper implementation="info.magnolia.maven.bootstrap.post.OrderNodes">
                  <repository>website</repository>
                  <nodes>
                    <node>features</node>
                    <node>magnolia-product-info</node>
                    <node>mailform</node>
                    <node>help</node>
                    <node>mails</node>
                  </nodes>
                </postBootstrapper>
              </postBootstrappers>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
