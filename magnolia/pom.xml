        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <webResources>
            <resource>
              <!-- this is relative to the pom.xml directory -->
              <!-- without basedir it fails during a multimodule execution   -->
              <directory>${basedir}/src/release</directory>
              <filtering>true</filtering>
            </resource>
          </webResources>
         </configuration>
