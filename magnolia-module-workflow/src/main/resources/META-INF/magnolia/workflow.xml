<?xml version="1.0" encoding="UTF-8"?>
<module>
  <name>workflow</name>
  <displayName>Workflow</displayName>
  <description>Workflow using OpenWFE</description>
  <class>info.magnolia.module.workflow.WorkflowModule</class>
  <version>3.0</version>
  
  <properties>
    <property>
      <name>info.magnolia.module.workflow.flows.FlowDefinitionManager</name>
      <value>info.magnolia.module.workflow.flows.SimpleFlowDefinitionManager</value>
    </property>
  </properties>
  
  <dependencies>
    <dependency>
      <name>adminInterface</name>
      <version>3.0</version>
    </dependency>

    <dependency>
      <name>dms</name>
      <version>1.1</version>
      <optional>true</optional>
    </dependency>
  </dependencies>

  <repositories>
    <repository>
      <name>magnolia</name>
      <nodeTypeFile>/mgnl-nodetypes/owfe-nodetypes.xml</nodeTypeFile>
      <workspaces>
        <workspace>Store</workspace>
        <workspace>Expressions</workspace>
      </workspaces>
    </repository>
  </repositories>
</module>