<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>samples</name>
  <displayName>Magnolia Samples Module</displayName>
  <class>info.magnolia.module.samples.SamplesModule</class>
  <versionHandler>info.magnolia.module.samples.setup.SamplesVersionHandler</versionHandler>
  <version>${project.version}</version>
  <properties>
    <property>
      <name>defaultPublicURI</name>
      <value>redirect:/ftl-sample-site.html</value>
    </property>
  </properties>
  <dependencies>
    <dependency>
      <name>adminInterface</name>
      <version>4.5.3/*</version>
    </dependency>
    <dependency>
      <name>dms</name>
      <version>1.6/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>4.5.3/*</version>
    </dependency>
    <dependency>
      <name>templating-jsp</name>
      <version>4.5.3/*</version>
    </dependency>   
  </dependencies>
  <servlets>
    <servlet>
      <name>DisplaySamplesSourcesServlet</name>
      <class>info.magnolia.module.samples.servlets.DisplaySamplesSourcesServlet</class>
      <comment>Used to display the samples sources</comment>
      <mappings>
        <mapping>/.sources/*</mapping>
      </mappings>
    </servlet>
  </servlets>
</module>
