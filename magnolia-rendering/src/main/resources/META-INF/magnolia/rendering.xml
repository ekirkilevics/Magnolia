<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>rendering</name>
  <displayName>Magnolia Rendering Module</displayName>
  <class>info.magnolia.rendering.module.RenderingModule</class>
  <!--<versionHandler>info.magnolia.rendering.module.setup.TemplatingModuleVersionHandler</versionHandler>-->
  <version>${project.version}</version>
  <components>
    <id>main</id>
    <component>
      <type>info.magnolia.rendering.engine.RenderingEngine</type>
      <workspace>config</workspace>
      <path>/server/rendering/engine</path>
      <observed>true</observed>
      <scope>singleton</scope>
    </component>
    <component>
      <type>info.magnolia.rendering.context.RenderingContext</type>
      <implementation>info.magnolia.rendering.context.AggregationStateBasedRenderingContext</implementation>
    </component>
    <component>
      <type>info.magnolia.rendering.renderer.registry.RendererRegistry</type>
      <implementation>info.magnolia.rendering.renderer.registry.RendererRegistry</implementation>
    </component>
    <component>
      <type>info.magnolia.rendering.renderer.registry.ConfiguredRendererManager</type>
      <implementation>info.magnolia.rendering.renderer.registry.ConfiguredRendererManager</implementation>
    </component>
    <component>
      <type>info.magnolia.rendering.template.registry.TemplateDefinitionRegistry</type>
      <implementation>info.magnolia.rendering.template.registry.TemplateDefinitionRegistry</implementation>
    </component>
    <component>
      <type>info.magnolia.rendering.template.registry.ConfiguredTemplateDefinitionManager</type>
      <implementation>info.magnolia.rendering.template.registry.ConfiguredTemplateDefinitionManager</implementation>
    </component>
    <component>
      <type>info.magnolia.rendering.template.assignment.TemplateDefinitionAssignment</type>
      <implementation>info.magnolia.rendering.template.assignment.MetaDataBasedTemplateDefinitionAssignment</implementation>
    </component>
    <component>
      <type>info.magnolia.rendering.template.registry.TemplateAvailability</type>
      <implementation>info.magnolia.rendering.template.registry.DefaultTemplateAvailability</implementation>
    </component>
    <type-mapping>
      <type>info.magnolia.rendering.template.RenderableDefinition</type>
      <implementation>info.magnolia.rendering.template.configured.ConfiguredRenderableDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.rendering.template.TemplateDefinition</type>
      <implementation>info.magnolia.rendering.template.configured.ConfiguredTemplateDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.rendering.template.AreaDefinition</type>
      <implementation>info.magnolia.rendering.template.configured.ConfiguredAreaDefinition</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.rendering.template.ComponentAvailability</type>
      <implementation>info.magnolia.rendering.template.configured.ConfiguredComponentAvailability</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.rendering.template.InheritanceConfiguration</type>
      <implementation>info.magnolia.rendering.template.configured.ConfiguredInheritance</implementation>
    </type-mapping>
    <type-mapping>
      <type>info.magnolia.rendering.template.AutoGenerationConfiguration</type>
      <implementation>info.magnolia.rendering.template.configured.ConfiguredAutoGeneration</implementation>
    </type-mapping>
  </components>
  <dependencies>
    <dependency>
      <name>core</name>
      <version>4.5/*</version>
    </dependency>
  </dependencies>
</module>
