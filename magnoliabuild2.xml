      <include name="../../../System/Library/Frameworks/JavaVM.framework/Versions/1.4.2/Home/lib/ext/sunjce_provider.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.java_version_1.4.2_05}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.java_version_1.4.2_05"/>


  <!-- Project Libraries -->
  <path id="library.magnolia.classpath">
    <pathelement location="/Users/sam/projects/magnolia/libraries/apache_util.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/cos.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/jcr-ri.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/jcr.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/jdom.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/jdsl.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/jsp-api.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/jstl.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/log4j.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/lucene-20030909.jar"/>
