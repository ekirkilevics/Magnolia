    <pathelement location="/Users/sam/projects/magnolia/libraries/standard.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/taglibs-mailer.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/w3c.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/webdav.jar"/>
    <pathelement location="/Users/sam/projects/magnolia/libraries/commons-httpclient.jar"/>
  </path>
  
  
  <dirname property="module.magnoliabuild2.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.magnoliabuild2" value="${project.jdk.home}"/>
  <property name="module.jdk.classpath.magnoliabuild2" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.magnoliabuild2" value="${compiler.args}"/>
  
  <property name="magnoliabuild2.output.dir" value="${module.magnoliabuild2.basedir}/classes"/>
  <property name="magnoliabuild2.testoutput.dir" value="${module.magnoliabuild2.basedir}/classes"/>
  
  <path id="magnoliabuild2.module.bootclasspath">
  </path>
  
  <path id="magnoliabuild2.module.classpath">
    <path refid="${module.jdk.classpath.magnoliabuild2}"/>
    <path refid="library.magnolia.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.magnoliabuild2"/>
  
  <patternset id="excluded.from.compilation.magnoliabuild2">
    <patternset refid="excluded.from.module.magnoliabuild2"/>
    <patternset refid="compiler.excluded"/>
  </patternset>
  
  <path id="magnoliabuild2.module.sourcepath">
    <dirset dir="${module.magnoliabuild2.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.magnoliabuild2" depends="compile.module.magnoliabuild2.production,compile.module.magnoliabuild2.tests" description="compile module magnoliabuild2"/>
  
  <target name="compile.module.magnoliabuild2.production" description="compile module magnoliabuild2 production classes">
    <mkdir dir="${magnoliabuild2.output.dir}"/>
    <javac destdir="${magnoliabuild2.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memoryMaximumSize="${compiler.max.memory}" fork="true" executable="${module.jdk.home.magnoliabuild2}/bin/javac">
      <compilerarg line="${compiler.args.magnoliabuild2}"/>
      <bootclasspath refid="magnoliabuild2.module.bootclasspath"/>
      <classpath refid="magnoliabuild2.module.classpath"/>
      <src refid="magnoliabuild2.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.magnoliabuild2"/>
    </javac>
    <copy todir="${magnoliabuild2.output.dir}">
      <fileset dir="${module.magnoliabuild2.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
        <patternset refid="excluded.from.compilation.magnoliabuild2"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.magnoliabuild2.tests" depends="compile.module.magnoliabuild2.production" description="compile module magnoliabuild2 test classes" unless="skip.tests"/>
  
  <target name="clean.module.magnoliabuild2" description="cleanup module">
    <delete dir="${magnoliabuild2.output.dir}"/>
    <delete dir="${magnoliabuild2.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
  </target>
  
  <target name="clean" depends="clean.module.magnoliabuild2" description="cleanup all"/>
  
  <target name="all" depends="init, clean, compile.module.magnoliabuild2" description="build all"/>
</project>