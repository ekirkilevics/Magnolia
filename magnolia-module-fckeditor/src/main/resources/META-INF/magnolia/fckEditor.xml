<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>fckEditor</name>
  <displayName>Magnolia FCKEditor Module</displayName>
  <class>info.magnolia.module.fckeditor.FCKEditorModule</class>
  <versionHandler>info.magnolia.module.fckeditor.FCKEditorModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>adminInterface</name>
      <version>4.5.3/*</version>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>FCKEditorSimpleUploadServlet</name>
      <class>info.magnolia.module.fckeditor.servlets.FCKEditorSimpleUploadServlet</class>
      <comment>Used for fckeditor inline images and files</comment>
      <mappings>
        <mapping>/.magnolia/fckeditor/upload</mapping>
      </mappings>
      <params>
        <param>
          <name>AllowedExtensionsFile</name>
          <value/>
        </param>
        <param>
          <name>DeniedExtensionsFile</name>
          <value>php|php3|php5|phtml|asp|aspx|ascx|jsp|cfm|cfc|pl|bat|exe|dll|reg|cgi</value>
        </param>
        <param>
          <name>AllowedExtensionsImage</name>
          <value>jpg|gif|jpeg|png|bmp</value>
        </param>
        <param>
          <name>DeniedExtensionsImage</name>
          <value/>
        </param>
        <param>
          <name>AllowedExtensionsFlash</name>
          <value>swf|fla</value>
        </param>
        <param>
          <name>DeniedExtensionsFlash</name>
          <value/>
        </param>
      </params>
    </servlet>
  </servlets>
</module>
