<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>magnolia-templating-editor</name>
  <displayName>Magnolia Templating Editor Module</displayName>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>templating</name>
      <version>4.5.2/*</version>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>PageEditorServlet</name>
      <class>info.magnolia.templating.editor.servlet.PageEditorServlet</class>
      <mappings>
        <mapping>/.magnolia/pageeditor/*</mapping>
      </mappings>
    </servlet>
  </servlets>
</module>
