<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>wcm</name>
  <displayName>Magnolia Web Content Management</displayName>
  <class>info.magnolia.module.wcm.WCMModule</class>
  <version>${project.version}</version>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.0/*</version>
    </dependency>
  </dependencies>

  <servlets>
    <servlet>
      <name>PageEditor</name>
      <class>info.magnolia.module.admincentral.vaadin.MagnoliaResoucesAwareApplicationServlet</class>
       <mappings>
         <mapping>/.magnolia/page-editor</mapping>
         <mapping>/.magnolia/page-editor/*</mapping>
       </mappings>
       <params>
         <param>
           <name>application</name>
           <value>info.magnolia.module.wcm.pageeditor.server.PageEditorApplication</value>
         </param>
         <param>
           <name>widgetset</name>
           <value>info.magnolia.module.wcm.pageeditor.PageEditor</value>
         </param>
       </params>
    </servlet>
  </servlets>
</module>
