<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>admin-central</name>
  <displayName>Magnolia GenUIne Admin Interface</displayName>
  <description>New Magnolia Administration GUI</description>
  <class>info.magnolia.ui.admincentral.module.AdminCentralModule</class>
  <versionHandler>info.magnolia.ui.admincentral.module.setup.AdminCentralModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <properties>
    <property>
      <name>info.magnolia.ui.admincentral.tree.TreeRegistry</name>
      <value>info.magnolia.ui.admincentral.tree.TreeRegistry</value>
    </property>
    <property>
      <name>info.magnolia.ui.admincentral.dialog.registry.DialogRegistry</name>
      <value>info.magnolia.ui.admincentral.dialog.registry.DialogRegistry</value>
    </property>
    <property>
      <name>info.magnolia.ui.admincentral.dialog.registry.ConfiguredDialogManager</name>
      <value>info.magnolia.ui.admincentral.dialog.registry.ConfiguredDialogManager</value>
    </property>
    <property>
      <name>info.magnolia.ui.admincentral.tree.ConfiguredTreeManager</name>
      <value>info.magnolia.ui.admincentral.tree.ConfiguredTreeManager</value>
    </property>
  </properties>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>vaadin</name>
      <version>5.0/*</version>
    </dependency>
    <!-- the dependency is just to ensure order of loading of modules -->
    <dependency>
      <name>adminInterface</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>samples</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>wcm</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>cache</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
      <dependency>
      <name>groovy</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>dms</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>workflow</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>demo-project</name>
      <version>1.4/*</version>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>AdminCentral</name>
      <class>info.magnolia.ui.vaadin.integration.servlet.MagnoliaResourcesAwareApplicationServlet</class>
       <mappings>
         <mapping>/.magnolia/admin-central</mapping>
         <mapping>/.magnolia/admin-central/*</mapping>
      </mappings>
       <params>
         <param>
           <name>application</name>
           <value>info.magnolia.ui.admincentral.AdminCentralApplication</value>
         </param>
         <param>
           <name>widgetset</name>
           <value>info.magnolia.ui.vaadin.widgetset.MagnoliaWidgetset</value>
         </param>
       </params>
    </servlet>
  </servlets>
</module>
