<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd">
<module>
  <name>admin-central</name>
  <displayName>Magnolia GenUIne Admin Interface</displayName>
  <description>New Magnolia Administration GUI</description>
  <class>info.magnolia.ui.admincentral.module.AdminCentralModule</class>
  <versionHandler>info.magnolia.ui.admincentral.module.setup.AdminCentralModuleVersionHandler</versionHandler>
  <version>${project.version}</version>

  <properties>
    <property>
      <name>info.magnolia.ui.model.workbench.registry.ConfiguredWorkbenchManager</name>
      <value>info.magnolia.ui.model.workbench.registry.ConfiguredWorkbenchManager</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.workbench.registry.WorkbenchRegistry</name>
      <value>info.magnolia.ui.model.workbench.registry.WorkbenchRegistry</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.dialog.registry.DialogDefinitionRegistry</name>
      <value>info.magnolia.ui.model.dialog.registry.DialogDefinitionRegistryImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.dialog.registry.ConfiguredDialogManager</name>
      <value>info.magnolia.ui.model.dialog.registry.ConfiguredDialogManager</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.tree.registry.ConfiguredTreeManager</name>
      <value>info.magnolia.ui.model.tree.registry.ConfiguredTreeManager</value>
    </property>
    <property>
      <name>info.magnolia.ui.admincentral.configuration.AdminCentralConfigurationProvider</name>
      <value>info.magnolia.ui.admincentral.configuration.AdminCentralConfigurationProviderImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.navigation.definition.NavigationDefinition</name>
      <value>info.magnolia.ui.model.navigation.definition.NavigationDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.navigation.definition.NavigationItemDefinition</name>
      <value>info.magnolia.ui.model.navigation.definition.NavigationItemDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.menu.definition.MenuItemDefinition</name>
      <value>info.magnolia.ui.model.menu.definition.MenuItemDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.navigation.definition.NavigationWorkareaDefinition</name>
      <value>info.magnolia.ui.model.navigation.definition.NavigationWorkareaDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.navigation.definition.NavigationGroupDefinition</name>
      <value>info.magnolia.ui.model.navigation.definition.NavigationGroupDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.toolbar.ToolbarDefinition</name>
      <value>info.magnolia.ui.model.toolbar.ToolbarDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.toolbar.ToolbarItemGroupDefinition</name>
      <value>info.magnolia.ui.model.toolbar.ToolbarItemGroupDefinitionImpl</value>
    </property>
    <property>
      <name>info.magnolia.ui.model.toolbar.ToolbarItemDefinition</name>
      <value>info.magnolia.ui.model.toolbar.ToolbarItemDefinitionImpl</value>
    </property>
  </properties>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>5.0/*</version>
    </dependency>
    <dependency>
      <name>vaadin</name>
      <version>5.0/*</version>
    </dependency>
    <!-- the dependency is just to ensure order of loading of modules -->
    <dependency>
      <name>adminInterface</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>samples</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>cache</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
      <dependency>
      <name>groovy</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>dms</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>workflow</name>
      <version>5.0/*</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <name>demo-project</name>
      <version>1.4/*</version>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>AdminCentral</name>
      <class>info.magnolia.ui.vaadin.integration.servlet.MagnoliaResourcesAwareApplicationServlet</class>
       <mappings>
         <mapping>/.magnolia/admin-central</mapping>
         <mapping>/.magnolia/admin-central/*</mapping>
      </mappings>
       <params>
         <param>
           <name>application</name>
           <value>info.magnolia.ui.admincentral.AdminCentralApplication</value>
         </param>
         <param>
           <name>widgetset</name>
           <value>info.magnolia.ui.vaadin.widgetset.MagnoliaWidgetset</value>
         </param>
       </params>
    </servlet>
  </servlets>
</module>
