<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project >
<project xmlns:j="jelly:core" xmlns:u="jelly:util" default="rebuild-all">
    <goal name="rebuild-all" prereqs="pom,clean,war:war,dist:build" />
    <postGoal name="site">
        <attainGoal name="pdf" />
    </postGoal>
       
    <preGoal name="jar:jar">
        <!-- add tlds to taglib jar -->
        <j:set var="tld.dir" value="${maven.src.dir}/webapp/WEB-INF/taglib" />
        <echo message="copying tld files ${tld.dir} to ${maven.build.dest}/META-INF" />
        <copy todir="${maven.build.dest}/META-INF">
            <fileset dir="${tld.dir}">
                <include name="*.tld" />
            </fileset>
        </copy>
    </preGoal>

</project>