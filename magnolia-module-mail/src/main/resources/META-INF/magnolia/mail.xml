  <class>info.magnolia.cms.mail.MailModule</class>
  <version>3.1</version>
  <dependencies>
    <dependency>
      <name>templating</name>
      <version>3.1</version>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>Mail</name>
      <class>info.magnolia.cms.mail.servlets.MgnlMailServlet</class>
      <comment>Servlet to send email using the email system.</comment>
      <mappings>
        <mapping>/.magnolia/mail/*</mapping>
      </mappings>
      <params>
        <!--<param></param> -->
      </params>
    </servlet>
  </servlets>
</module>
