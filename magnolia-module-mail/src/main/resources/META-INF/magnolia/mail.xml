<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>mail</name>
  <displayName>Magnolia Mail Module</displayName>
  <class>info.magnolia.cms.mail.MailModule</class>
  <versionHandler>info.magnolia.cms.mail.setup.MailModuleVersionHandler</versionHandler>
  <version>${project.version}</version>
  <dependencies>
    <dependency>
      <name>adminInterface</name>
      <version>3.5/*</version>
    </dependency>
    <dependency>
      <name>templating</name>
      <version>3.5/*</version>
    </dependency>
  </dependencies>
  <servlets>
    <servlet>
      <name>Mail</name>
      <class>info.magnolia.cms.mail.servlets.MgnlMailServlet</class>
      <comment>Servlet to send email using the email system.</comment>
      <mappings>
        <mapping>/.magnolia/mail*</mapping>
      </mappings>
    </servlet>
  </servlets>
</module>
